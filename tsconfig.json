{
  "include": [
    "src"
 ],
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": false,
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ]
}
